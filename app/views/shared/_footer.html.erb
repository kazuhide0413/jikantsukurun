    <%= link_to settings_path,
      class: "flex flex-col items-center transition #{current_page?(settings_path) ? 'text-sky-500' : 'text-gray-600 hover:text-sky-400'}" do %>
      <i class="fas fa-cog text-lg mb-0.5"></i>
      <span class="text-[10px] font-medium">設定</span>
    <% end %>

  </nav>
