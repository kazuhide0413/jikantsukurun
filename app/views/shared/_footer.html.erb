  <nav class="w-full max-w-md px-6 py-3 flex justify-between items-center">

    <!-- 使い方 -->
    <%= link_to guide_path,
      class: "flex flex-col items-center transition #{current_page?(guide_path) ? 'text-sky-500' : 'text-gray-600 hover:text-sky-400'}" do %>
      <i class="fas fa-question-circle text-lg mb-0.5"></i>
      <span class="text-[10px] font-medium">使い方</span>
    <% end %>

    <!-- 習慣登録 -->
