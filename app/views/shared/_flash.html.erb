<% flash.each do |type, message| %>
  <% next if message.blank? %>

  <% base = "mb-4 w-full rounded-lg px-4 py-3 text-sm border" %>

  <% css =
    case type.to_sym
    when :notice, :success
      "#{base} bg-green-50 text-green-800 border-green-200"
    when :alert, :error
      "#{base} bg-red-50 text-red-800 border-red-200"
    else
      "#{base} bg-gray-50 text-gray-800 border-gray-200"
    end
  %>

  <div class="<%= css %>">
    <p class="leading-relaxed"><%= message %></p>
  </div>
<% end %>
