<footer class="pt-4 space-y-2">
  <% if controller_name != 'sessions' %>
    <p class="text-black text-base [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      <%= link_to "新規登録が済んでいる場合", new_session_path(resource_name), class: "underline hover:text-gray-700" %>
    </p>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="text-black text-base [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      <%= link_to "新規登録がまだの場合", new_registration_path(resource_name), class: "underline hover:text-gray-700" %>
    </p>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p class="text-black text-base [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "underline hover:text-gray-700" %>
    </p>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="text-black text-base [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), class: "underline hover:text-gray-700" %>
    </p>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p class="text-black text-base [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      <%= link_to "ロック解除メールを受け取っていない場合", new_unlock_path(resource_name), class: "underline hover:text-gray-700" %>
    </p>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <p>
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "underline hover:text-gray-700" %>
      </p>
    <% end %>
  <% end %>
</footer>
