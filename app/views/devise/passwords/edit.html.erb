<% @hide_footer = true %>

<div class="w-full flex flex-col items-center text-center space-y-8">
  <!-- タイトル -->
  <header class="mt-10">
    <h1 class="font-medium text-2xl text-black [font-family:'Rounded_Mplus_1c-Black',Helvetica]">
      パスワードを再設定する
    </h1>
  </header>

  <!-- 説明 -->
  <section class="w-full">
    <p class="text-base text-black [font-family:'Rounded_Mplus_1c-Regular',Helvetica] leading-relaxed">
      新しいパスワードを入力してください
    </p>
  </section>

  <!-- フォーム -->
  <%= form_for(resource,
              as: resource_name,
              url: password_path(resource_name),
              html: { method: :put, class: "w-full space-y-5 text-left" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.hidden_field :reset_password_token %>

    <!-- パスワード -->
    <div>
      <%= f.label :password, "パスワード",
          class: "block mb-1 font-medium text-black [font-family:'Rounded_Mplus_1c-Regular',Helvetica]" %>

      <% if @minimum_password_length %>
        <p class="text-sm text-gray-600 mb-1 [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
          （<%= @minimum_password_length %>文字以上）
        </p>
      <% end %>

      <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full px-3 py-2 rounded-lg border border-gray-300 bg-white
                  focus:outline-none focus:ring-2 focus:ring-[#67c2fa]
                  [font-family:'Rounded_Mplus_1c-Regular',Helvetica]" %>
    </div>

    <!-- パスワード（確認用） -->
    <div>
      <%= f.label :password_confirmation, "パスワード（確認用）",
          class: "block mb-1 font-medium text-black [font-family:'Rounded_Mplus_1c-Regular',Helvetica]" %>

      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full px-3 py-2 rounded-lg border border-gray-300 bg-white
                  focus:outline-none focus:ring-2 focus:ring-[#67c2fa]
                  [font-family:'Rounded_Mplus_1c-Regular',Helvetica]" %>
    </div>

    <!-- 送信ボタン -->
    <div class="pt-4">
      <%= f.submit "入力完了",
          class: "w-full bg-[#67c2fa] hover:bg-[#4eb3f7]
                  rounded-xl py-3 text-2xl font-medium text-black
                  transition-colors [font-family:'Rounded_Mplus_1c-Medium',Helvetica]" %>
    </div>
  <% end %>
</div>
