<%= form_with(model: habit, local: true, class: "space-y-6 w-full text-left") do |f| %>
  <% if habit.errors.any? %>
    <div class="w-full bg-red-50 border border-red-300 rounded-xl p-4 text-red-700 text-sm [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      <ul class="list-disc pl-5 text-left">
        <% habit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start space-y-2 w-full">
    <label for="habit_title" class="text-lg text-black [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
      習慣名
    </label>

    <%= f.text_field :title,
        class: "w-full border border-gray-300 rounded-xl p-3 text-lg text-black focus:ring-2 focus:ring-sky-400 focus:outline-none [font-family:'Rounded_Mplus_1c-Regular',Helvetica]",
        placeholder: "例：洗濯" %>

    <% if habit.errors[:title].any? %>
      <p class="text-red-600 text-sm mt-1 [font-family:'Rounded_Mplus_1c-Regular',Helvetica]">
        <%= habit.errors[:title].first %>
      </p>
    <% end %>
  </div>

  <section class="w-full">
    <%= f.submit habit.persisted? ? "更新" : "登録",
        class: "w-full bg-[#67c2fa] hover:bg-[#4eb3f7] rounded-xl py-3 text-2xl text-black font-medium
                transition-colors shadow-sm [font-family:'Rounded_Mplus_1c-Regular',Helvetica]" %>
  </section>
<% end %>
