<div class="bg-[#e8e7e7] min-h-screen flex flex-col items-center justify-center p-6">
  <!-- タイトル -->
  <header class="text-center mb-6">
    <h1 class="text-2xl font-bold [font-family:'Rounded_Mplus_1c-Black',Helvetica]">
      あなたが有効に使えた時間
    </h1>
  </header>

  <!-- カレンダー全体 -->
  <div class="bg-white rounded-2xl shadow-md p-6 w-full max-w-md mx-auto flex flex-col items-center">
    <!-- simple_calendar 出力部分を中央寄せ -->
    <div class="w-full flex justify-center">
      <%= month_calendar(start_date: @start_date) do |date| %>
        <% s = @sessions_by_date[date] %>
        <div class="flex flex-col items-center justify-center w-[46px] h-[46px] sm:w-[52px] sm:h-[52px]">
          <div class="font-bold text-sm <%= day_text_color(date) %>"><%= date.day %></div>
          <div class="text-[10px] text-gray-500 mt-0.5 leading-tight">
            <%= s&.formatted_effective_duration || "ー" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 月移動ナビ -->
  <nav class="flex justify-center items-center gap-6 mt-6 text-sm text-gray-600">
    <%= link_to "← 前の月", daily_sessions_path(start_date: (@start_date - 1.month).to_s), class: "hover:text-sky-500" %>
    <%= link_to "今月", daily_sessions_path, class: "font-semibold hover:text-sky-500" %>
    <%= link_to "次の月 →", daily_sessions_path(start_date: (@start_date + 1.month).to_s), class: "hover:text-sky-500" %>
  </nav>
</div>
