<div class="bg-[#e8e7e7] min-h-screen flex flex-col items-center justify-start p-6">
  <div class="w-full max-w-sm">
    <h1 class="text-2xl font-bold text-black mb-4">📆 今月の有効時間</h1>

    <% @effective_durations_by_date.each do |date, formatted| %>
      <div class="bg-white rounded-lg shadow p-3 mb-2">
        <p class="text-gray-700 font-medium"><%= date %></p>
        <p class="text-sky-600 text-sm"><%= formatted || "記録なし" %></p>
      </div>
    <% end %>
  </div>
</div>
